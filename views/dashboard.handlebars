<div class="card new-post">
  <div class="card-divider">
    <h2>Ready to join the tide?</h2>
  </div>
  <div class="card-section">
    <p>Guidelines for Making Waves:</p>
    <ol>
      <li>Be respectful of others, both in posts and the comments</li>
      <li>Keep the content relevant and current</li>
      <li>Ride the tide and keep making waves in the music tech community!</li>
    </ol>
    <div class="card-section">
      <button id="new-post" type="button" class="button">Make Some Waves</button>
    </div>
  </div>
</div>

<div class="hide post-form card form-card">
  <form>
    <div>
      <label for="form-post-title">Title:</label>
      <input type="text" id="form-post-title" />
    </div>
    <div>
      <textarea name="form-post-body"></textarea>
    </div>

    <div class="form-bottom">
      <button type="submit" class="submit button">Post</button>
    </div>
  </form>
</div>


{{#if posts}}
  {{#each posts as |post|}}
    <div class="card">
      <article id="{{post.id}}">

        <div class="card-divider">
          <h4 id="post-title">{{post.title}}</h4>
        </div>
        <div class="card-section post-content">

          <p id="post-content">{{post.content}}</p>
        </div>

        <div class="card-section post-info">
            <div class="posted-by">
              Posted by
              <b>{{post.user.username}}</b>
              on
              {{post.created_at}}
              |
              <a href="/post/{{post.id}}">{{post.comments.length}}
                comment(s)</a>
            </div>
            {{#if post.updated_at}}
              <div class="updated-at">
                Updated at
                {{post.updated_at}}
              </div>
            {{/if}}
          </div>

          <div class="card-section" id="postEditBtns-{{post.id}}">
            <button id="edit-post" type="button" class="button primary">Edit</button>
            <button id="save-post" type="button" class="button primary hide">Save</button>
            <button id="del-post" type="button" class="button primary">Delete</button>
          </div>

        </div>

        <div class="card-section">
          <div class="comments">
            {{#each post.comments}}
              <section class="comment">
                <div class="meta">
                  <b>{{user.username}}</b>
                  on
                  {{created_at}}
                </div>
                <div class="text">
                  {{comment_text}}
                </div>
              </section>
            {{/each}}
          </div>
        </div>

      </article>
    </div>
  {{/each}}
{{else}}
<div class="card no-posts">
  <p>
    You haven't made any posts yet. 
    </br>
    Click <b>Make Some Waves</b> to start making waves!
  </p>
</div>
{{/if}}

<script src="/javascript/dashboard.js"></script>