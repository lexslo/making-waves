<div class="card">
  <article>
    <div class="card-divider">
      <h4>{{post.title}}</h4>
    </div>
    <div class="card-section post-content">
      <p>{{post.content}}</p>
    </div>
    <div class="card-section post-info">
      <div class="posted-by">
        Posted by
        <b>{{post.user.username}}</b>
        on
        {{formatDate post.created_at}}
        at
        {{formatTime post.created_at}}
      </div>
      {{#if post.updated_at}}
      <div class="updated-at">
        Updated at
        {{formatTime post.updated_at}}
        on
        {{formatDate post.updated_at}}
      </div>
      {{/if}}
    </div>
  </article>
</div>

{{#if loggedIn}}
<div class="card form-comment">
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div class="form-bottom">
      <button type="submit" class="submit button">Add comment</button>
    </div>
  </form>
</div>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment card">
    <div class="meta">
      <b>{{user.username}}</b> 
      on 
      {{formatDate created_at}}
      at
      {{formatTime created_at}}
    </div>
    <div class="comment-text card-section">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}